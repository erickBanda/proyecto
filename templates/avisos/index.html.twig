{% extends 'base.html.twig' %}

{% block title %}Avisos index{% endblock %}

{% block body %}
    <h1>Avisos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aviso in avisos %}
            <tr>
                <td>{{ aviso.id }}</td>
                <td>{{ aviso.titulo }}</td>
                <td>{{ aviso.descripcion }}</td>
                <td>
                    <a href="{{ path('app_avisos_show', {'id': aviso.id}) }}">show</a>
                    <a href="{{ path('app_avisos_edit', {'id': aviso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avisos_new') }}">Create new</a>
{% endblock %}
